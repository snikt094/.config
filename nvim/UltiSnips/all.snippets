snippet mk "Math" wA
$${1}$`!p
if t[2] and t[2][0] not in [',', '.', '?', '-', ' ']:
snip.rv = ' '
else:
snip.rv = ''
`$2
endsnippet

snippet lrs "()" wA
(${1:${VISUAL:Some default text}}) $0
endsnippet

snippet lr| "||" wA
|${1:${VISUAL}}| $0
endsnippet

snippet lra "{}" wA
{${1:${VISUAL}}} $0
endsnippet

snippet lrj "[]" wA
[${1:${VISUAL}}] $0
endsnippet

snippet lrk "<>" wA
<${1:${VISUAL}}>$0
endsnippet
